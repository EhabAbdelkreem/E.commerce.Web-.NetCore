@model E.Comerce.Models.ViewModel.CategoryVM
@{
    ViewData["Title"] = "Index";
}


<div class="container p-4 ">
    <div class=" row p-3">
        <div class=" col-6">
            <h2 class="text-primary"> List Of Categories</h2>
        </div>
        <div class=" col-6 text-end">
            <a asp-area="Admin" asp-controller="Category" asp-action="CreateUpdate" >Create new Category</a>
        </div>

    </div>

</div>




<table class="table table-striped table-dark" width="100%">
    <thead>
        <tr>
            <th scope="col">Category</th>
            <th scope="col">Display Order</th>
            <th scope="col"> Action</th>


        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model.categories)
        {
            <tr>

                <td>@item.Name</td>
                <td>@item.DiplayOrder</td>
                <td role="group">
                    <a asp-controller="Category" asp-action="CreateUpdate" asp-route-id="@item.Id" class="btn btn-primary  btn-sm"> Edit <i class="bi bi-pencil-square"></i> </a>
                    <a asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger  btn-sm"> Delete   <i class="fa fa-close"></i> </a>

                </td>

            </tr>
        }

    </tbody>
</table>


